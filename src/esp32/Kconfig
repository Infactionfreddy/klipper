# Kconfig settings for ESP32 processors

if MACH_ESP32

config ESP32_SELECT
    bool
    default y
    select HAVE_GPIO
    select HAVE_GPIO_ADC
    select HAVE_GPIO_SPI
    select HAVE_GPIO_I2C
    select HAVE_STRICT_TIMING
    select HAVE_CHIPID
    select HAVE_GPIO_HARD_PWM

config BOARD_DIRECTORY
    string
    default "esp32"

choice
    prompt "Processor model"
    config MACH_ESP32_ORIG
        bool "esp32"
endchoice

config MCU
    string
    default "esp32"

config CLOCK_FREQ
    int
    default 240000000

config SERIAL
    bool
    default y

config SERIAL_BAUD
    int
    default 250000

endif
